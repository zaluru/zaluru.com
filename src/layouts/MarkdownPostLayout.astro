---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---
<BaseLayout>
    <main class="flex-1 parsedown">        
        <h1>{frontmatter.title}</h1>
        <p>Written by {frontmatter.author}</p>
        <p>Published on: {frontmatter.pubDate.slice(0,10)}</p>
        <slot />
    </main>
</BaseLayout>
<style is:global>
    .parsedown h1 {
        @apply text-4xl font-bold pt-12 pb-4 before:content-['*_'] 
    }
    
    .parsedown h2 {
        @apply text-3xl font-bold pt-12 pb-4 before:content-['*_']
    }

    .parsedown h3 {
        @apply text-2xl font-bold pt-12 pb-4 before:content-['*_']
    }
    
    .parsedown h4 {
        @apply text-xl font-bold pt-12 pb-4 before:content-['*_']
    }
    
    .parsedown h5 {
        @apply text-lg font-bold pt-12 pb-4 before:content-['*_']
    }
</style>
